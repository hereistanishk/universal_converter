{
    "name": "Flutter Dev Container",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/flutter:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.flutter",
                "Dart-Code.dart-code"
            ]
        }
    },
    "forwardPorts": [9000],
    "postCreateCommand": "flutter doctor -v",
    "remoteUser": "vscode"
}
